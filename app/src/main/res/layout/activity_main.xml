<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entre com um intervalo:"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/numero1__edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_weight="1"
                android:text="Numero 1"
                android:inputType="number"/>

            <EditText
                android:id="@+id/numero2__edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="Numero 2"
                android:layout_weight="1"
                android:inputType="number" />
        </LinearLayout>

        <Button
            android:id="@+id/enviar_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickGerarNumero"
            android:layout_gravity="center"
            android:text="SORTEAR"/>

        <TextView
            android:id="@+id/resultado_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Nenhum nÃºmero selecionado"
            android:layout_marginTop="60dp"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>